@model Librarian.Models.ModelWithController<IEnumerable<Librarian.Models.Publisher>>

@{
    ViewBag.Title = "Publishers";
}

<h2>Publishers</h2>

<div class="container">
    <section class="row">
        <div class="col-lg-6 col-md-6">
            <a href="#" ng-click="controller.createPublisher()"><i class="glyphicon glyphicon-asterisk"></i> Add Publisher</a>
        </div>
        <div class="col-lg-2 col-md-6 form-inline">
            <label for="filter">Search:</label>
            <input type="text" class="form-control" id="filter" ng-model="controller.filter" />
        </div>
    </section>
    <div class="row">
        <div class="col-lg-12 col-md-12">&nbsp;</div>
    </div>
    <table class="table row">
        <tr>
            <th>
                Name
            </th>
            <th>
                City
            </th>
            <th>
                Country
            </th>
            <th colspan="3"></th>
        </tr>
        <tr ng-repeat="publisher in controller.publishers | orderBy: 'Name' | filter: {$: controller.filter} track by publisher.ID" ng-cloak>
            <td>{{ publisher.Name }}</td>
            <td>{{ publisher.City }}</td>
            <td>{{ publisher.Country }}</td>
            <td><a href="#" ng-click="controller.displayPublisher(publisher)"><i class="glyphicon glyphicon-plus-sign"></i> <span class="hidden-sm">Details</span></a></td>
            <td><a href="#" ng-click="controller.displayDeletePublisher(publisher)"><i class="glyphicon glyphicon-remove"></i> <span class="hidden-sm">Details</span></a></td>
            <td><a href="#" ng-click="controller.displayEditPublisher(publisher)"><i class="glyphicon glyphicon-pencil"></i> <span class="hidden-sm">Details</span></a></td>
        </tr>
    </table>
</div>
<div id="detailPopupContainer" ng-controller="publisherDetailCtrl as ctrl">
    @Html.Partial("Dialog", new Librarian.Models.Dialog
{
    Title = "Publisher Details",
    IncludeURL = "ctrl.displayPublisherUrl",
    Buttons = new List<Librarian.Models.Dialog.Button> {
                                            new Librarian.Models.Dialog.Button {
                                                Text="Edit",
                                                Attributes = new Dictionary<string, string> {
                                                    { "ng-click", "ctrl.displayEditPublisher()" }
                                                }
                                            }
                              }
})
</div>
<div id="deletePopupContainer" ng-controller="publisherDeleteCtrl as ctrl">
    @Html.Partial("Dialog", new Librarian.Models.Dialog
{
    Title = "Delete Publisher",
    IncludeURL = "ctrl.displayPublisherUrl",
    Buttons = new List<Librarian.Models.Dialog.Button> {
                                            new Librarian.Models.Dialog.Button {
                                                Text="Delete",
                                                Attributes = new Dictionary<string, string> {
                                                    { "ng-click", "ctrl.deletePublisher()" }
                                                },
                                                Default = true
                                            }
                              }
})
</div>
<div id="createPopupContainer" ng-controller="publisherCreateCtrl as ctrl">
    <form name="createForm">
        @Html.Partial("Dialog", new Librarian.Models.Dialog
   {
       Title = "New Publisher",
       IncludeURL = "ctrl.createPublisherUrl",
       Buttons = new List<Librarian.Models.Dialog.Button> {
                                            new Librarian.Models.Dialog.Button {
                                                Text="Save",
                                                Attributes = new Dictionary<string, string> {
                                                    { "ng-click", "ctrl.addPublisher()" }
                                                },
                                                Default = true
                                            }
                              }
   })
    </form>
</div>
<div id="editPopupContainer" ng-controller="publisherEditCtrl as ctrl">
    <form name="editForm">
        @Html.Partial("Dialog", new Librarian.Models.Dialog
   {
       Title = "Edit Publisher",
       IncludeURL = "ctrl.editPublisherUrl",
       Buttons = new List<Librarian.Models.Dialog.Button> {
                                            new Librarian.Models.Dialog.Button {
                                                Text="Save",
                                                Attributes = new Dictionary<string, string> {
                                                    { "ng-click", "ctrl.updatePublisher()" }
                                                },
                                                Default = true
                                            }
                              }
   })
    </form>
</div>
