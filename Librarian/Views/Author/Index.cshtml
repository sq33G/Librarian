@model Librarian.Models.Multi<Librarian.Models.AuthorVM>


@{
    ViewBag.Title = "Authors";
}

<h2>Authors</h2>

<p>
    (create new link)
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Suffix
        </th>
        <th></th>
    </tr>
    <tr ng-repeat="author in controller.authors | orderBy : 'LastName'">
        <td>{{ author.FirstName }}</td>
        <td>{{ author.LastName }}</td>
        <td>{{ author.Suffix }}</td>
        <td>(actions here)</td>
    </tr>
