<div class="container">
    <section class="row">
        <div class="col-lg-6 col-md-6">
            <a href="#" ng-click="controller.createItem()"><i class="glyphicon glyphicon-asterisk"></i> Add Item</a>
        </div>
        <div class="col-lg-2 col-md-6 form-inline">
            <label for="filter">Search:</label>
            <input type="text" class="form-control" id="filter" ng-model="controller.filter" />
        </div>
    </section>
    <div class="row"><div class="col-lg-12 col-md-12">&nbsp;</div></div>
    <div class="virtual-scroll-container" style="height: 600px">
        <div class="virtual-height">&nbsp;</div>
        <table id="itemsTable" class="table virtual-scroll-content">
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
                <th>
                    Location
                </th>
                <th>
                    Call Number
                </th>
                <th>
                    Copies
                </th>
                <th colspan="3"></th>
            </tr>
            <tr ng-repeat="item in controller.items | orderBy : 'Title' track by item.ID"
                ng-cloak>
                <td rowspan="8" ng-hide="item"></td>
                <td>{{ item.Title }}</td>
                <td>{{ item.AuthorsDesc }}</td>
                <td>{{ item.Location.Text }}</td>
                <td>{{ item.CallNum }}</td>
                <td>{{ item.CopiesCount }}</td>
                <td><a href="#/Detail/{{ item.ID }}"><i class="glyphicon glyphicon-plus-sign"></i> <span class="visible-lg">Details</span></a></td>
                <td><a href="#/Delete/{{ item.ID }}"><i class="glyphicon glyphicon-remove"></i> <span class="visible-lg">Delete</span></a></td>
                <td><a href="#/Edit/{{ item.ID }}"><i class="glyphicon glyphicon-pencil"></i> <span class="visible-lg">Edit</span></a></td>
            </tr>
        </table>
    </div>
</div>
