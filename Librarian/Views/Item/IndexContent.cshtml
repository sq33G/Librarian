<h2>Items</h2>

<div class="container">
    <section class="row">
        <div class="col-md-6">
            <a href="#/Create/" ><i class="glyphicon glyphicon-asterisk"></i> Add Item</a>
        </div>
        <div class="col-md-6 form-inline">
            <label for="filter">Search:</label>
            <input type="text" class="form-control" id="filter" ng-model="filter" ng-blur="setFilter()" />
            <button class="btn btn-primary">Go</button>
            <button class="btn" ng-click="filter = ''; setFilter();">Clear</button>
        </div>
    </section>
    <div class="row"><div class="col-lg-12 col-md-12">&nbsp;</div></div>
    <div infinite-scroll="getMoreItems()" infinite-scroll-disabled="gettingOrDone" infinite-scroll-distance="0"
         infinite-scroll-listen-for-event="items:modifiedOrFiltered" infinite-scroll-immediate-check="false">
        <table id="itemsTable" class="table">
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
                <th>
                    Location
                </th>
                <th>
                    Call Number
                </th>
                <th>
                    Copies
                </th>
                <th colspan="3"></th>
            </tr>
            <tr ng-repeat="item in items | orderBy : 'Title' | filter: filterItems track by item.ID"
                ng-cloak>
                <td>{{ item.Title }}</td>
                <td>{{ item.AuthorsDesc }}</td>
                <td>{{ item.Location.Text }}</td>
                <td>{{ item.CallNum }}</td>
                <td>{{ item.CopiesCount }}</td>
                <td><a href="#/Detail/{{ item.ID }}"><i class="glyphicon glyphicon-plus-sign"></i> <span class="visible-lg">Details</span></a></td>
                <td><a href="#/Delete/{{ item.ID }}"><i class="glyphicon glyphicon-remove"></i> <span class="visible-lg">Delete</span></a></td>
                <td><a href="#/Edit/{{ item.ID }}"><i class="glyphicon glyphicon-pencil"></i> <span class="visible-lg">Edit</span></a></td>
            </tr>
            <tr ng-hide="loadedAll"><td class="unloaded" colspan="8"></td></tr>
        </table>
    </div>
</div>
